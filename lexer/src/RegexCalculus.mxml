    <mx:VBox width="100%" height="100%" verticalGap="0">
        <mx:HBox width="100%" height="25" horizontalAlign="center" verticalAlign="middle" backgroundColor="#EDECDA">
            <mx:ButtonBar id="viewChanges">
                <mx:dataProvider>
                    <fx:Array>
                        <fx:String>LexerGenerator</fx:String>
                        <fx:String>RegularExpression</fx:String>
                    </fx:Array>
                </mx:dataProvider>                
            </mx:ButtonBar>
        </mx:HBox>
