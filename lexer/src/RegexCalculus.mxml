            <mx:VBox width="100%" height="100%">
                <mx:HBox width="100%" height="25" verticalAlign="middle" horizontalAlign="center">
                    <mx:Button id="loadFileBt" label="LoadSource" click="loadFileBt_clickHandler(event)" width="95" fillAlphas="[1.0, 1.0, 1.0, 1.0]" fillColors="[#BEDF5D, #D6EB9A]"/>
